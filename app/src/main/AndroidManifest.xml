<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ferid.app.frequentcontacts" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme"
        android:fullBackupContent="@xml/backup_rules">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:resizeableActivity="false"
            android:launchMode="singleInstance">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".selectnumber.SelectNumberActivity"
            android:label="@string/contacts"
            android:launchMode="singleTop"
            android:resizeableActivity="false"/>

        <receiver
            android:name="com.ferid.app.frequentcontacts.widget.ContactsWidget"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.ferid.app.frequentcontacts.widget.APP_TO_WID" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/contacts_widget_provider" />
        </receiver>

    </application>

</manifest>