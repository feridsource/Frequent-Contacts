<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contacts_list_item_height"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="@dimen/elevation">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/contacts_list_image_height"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_person"
                android:background="@color/darkGrey"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="@dimen/tiny_margin"
                android:layout_marginRight="@dimen/tiny_margin"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:fontFamily="@string/fontFamilyBold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginLeft="@dimen/tiny_margin"
                android:layout_marginRight="@dimen/tiny_margin"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/secondary_text"
                android:fontFamily="@string/fontFamilyLight"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            app:srcCompat="@drawable/ic_action_more"
            android:tint="@color/white"
            style="@style/Widget.AppCompat.ActionButton" />

    </android.support.v7.widget.CardView>

</LinearLayout>